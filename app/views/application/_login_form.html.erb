<div class="top_b">Log masuk ke system PRAISE</div> 
<div align="center" style="margin-bottom:-20px; margin-top:10px">
	<%=image_tag("logo_kpt.png", :size => "160x80")%>
</div>

<% if flash[:alert] %>
	<div class="alert alert-error" style="margin-bottom:-10px;margin-top:30px;margin-left:20px;margin-right:20px">
		<a class="close" data-dismiss="alert">Ã—</a>
		<%= flash[:alert] %>								
	</div>
<% end %>

<div class="cnt_b">
	<div class="formRow">
		<div class="input-prepend">
			<span class="add-on"><i class="icon-user"></i></span>
			<%= f.text_field :ic_number, :placeholder => "ID Pengguna", :id => "username" %>
		</div> <!-- end: input-prepend -->
	</div><!-- end: formRow -->
	<div class="formRow">
		<div class="input-prepend">
			<span class="add-on"><i class="icon-lock"></i></span>
			<%= f.password_field :password, :placeholder =>"Kata laluan", :id => "password" %>
		</div> <!-- end: input-prepend -->
	</div><!-- end: formRow -->
	<div class="formRow clearfix">
			<% if devise_mapping.rememberable? -%>
			<label class="checkbox"><%= f.check_box :remember_me %>Ingat kata laluan</label>
		<% end -%>
	</div>
</div>

<div class="btm_b clearfix">
	<%= f.submit "Masuk", :class => "btn btn-inverse pull-right" %>
	<span class="link_reg"><a href="#pass_form">Lupa kata laluan?</a></span>
</div>  